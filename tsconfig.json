{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "lib": ["es2017", "DOM"],
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src", "__test__"]
}
